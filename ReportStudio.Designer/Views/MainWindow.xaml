<Window x:Class="ReportStudio.Designer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ReportStudio.Designer.Views"
        Title="ReportStudio Designer"
        Width="1200"
        Height="800"
        WindowStartupLocation="CenterScreen">

    <!-- 画面全体のレイアウト -->
    <Grid>

        <!-- 行定義 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ツールバー -->
            <RowDefinition Height="*"/>
            <!-- メインエリア -->
            <RowDefinition Height="200"/>
            <!-- プロパティ -->
        </Grid.RowDefinitions>

        <!-- 列定義 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- バンド一覧 -->
            <ColumnDefinition Width="*"/>
            <!-- デザインキャンバス -->
        </Grid.ColumnDefinitions>

        <!-- ===== ツールバー ===== -->
        <ToolBar Grid.Row="0" Grid.ColumnSpan="2">
            <Button Content="新規" Width="80" Margin="4"/>
            <Button Content="開く" Width="80" Margin="4"/>
            <Button Content="保存" Width="80" Margin="4"/>
            <Separator/>
            <Button Content="プレビュー" Width="100" Margin="4"/>
        </ToolBar>

        <!-- ===== バンド一覧 ===== -->
        <Border Grid.Row="1" Grid.Column="0"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="#F5F5F5">

            <DockPanel>
                <TextBlock Text="バンド一覧"
                           DockPanel.Dock="Top"
                           FontWeight="Bold"
                           Padding="8"
                           Background="#DDDDDD"/>

                <ListBox ItemsSource="{Binding Bands}"
                         SelectedItem="{Binding SelectedBand}"
                         DisplayMemberPath="DisplayName"
                         Margin="4"/>
            </DockPanel>
        </Border>

        <!-- ===== デザインキャンバス ===== -->
        <Border Grid.Row="1" Grid.Column="1"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="#EDEDED">

            <views:DesignCanvasView/>
        </Border>

        <!-- ===== プロパティ表示 ===== -->
        <Border Grid.Row="2" Grid.ColumnSpan="2"
                BorderBrush="Gray"
                BorderThickness="1"
                Background="#FAFAFA">

            <views:PropertyView/>
        </Border>

    </Grid>
</Window>
